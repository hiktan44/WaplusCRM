NODE_ENV=production
PORT=8080

# CORS (comma-separated origins or *)
CORS_ORIGINS=*

# Admin panel
ADMIN_KEY=changeme-admin-key

# Tenant API keys (JSON map)
TENANT_KEYS={"public":"PUBLIC_API_KEY","demo":"DEMO_API_KEY"}

# Optional per-tenant plan overrides (JSON map)
TENANT_PLANS={"public":{"dailyLimit":1000,"monthlyLimit":50000,"ratePerMinute":20}}

# Stripe (optional)
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
# Map priceId -> plan key (pro, growth)
PLAN_PRICE_MAP={"price_ABC":"pro"}
